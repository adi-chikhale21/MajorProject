<% layout("/layouts/boilerplate") %>
<style>
    .responsive-listing-container {
        margin: 0 auto;
        padding: 20px;
        width: 100%;
        max-width: 800px;
    }

    .responsive-listing-title {
        text-align: center;
        margin-bottom: 20px;
        width: 100%;
    }

    .responsive-listing-form {
        width: 100%;
    }

    .responsive-listing-form .form-control {
        width: 100%;
    }


    @media (max-width: 768px) {
        .responsive-listing-container {
            padding: 10px;
        }

        .responsive-listing-title {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .responsive-listing-form .row {
            flex-direction: column;
        }

        .responsive-listing-form .col-md-4,
        .responsive-listing-form .col-md-8 {
            width: 100%;
            margin-bottom: 10px;
        }
    }

    @media (max-width: 576px) {
        .responsive-listing-container {
            padding: 5px;
        }

        .responsive-listing-title {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }
    }
</style>

<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3 responsive-listing-container">
            <h3 class="responsive-listing-title">Create New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation responsive-listing-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="Listing[title]" placeholder="Enter a Catchy Title" type="text" class="form-control" required />
                    <div class="valid-feedback">Title looks good</div>
                    <div class="invalid-feedback">Please enter a Catchy Title</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="Listing[description]" placeholder="Enter Description" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Enter a short description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="Listing[image]" placeholder="Upload Listing Image" type="file" class="form-control" required>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="Listing[price]" placeholder="1800" class="form-control" required>
                        <div class="invalid-feedback">Please Enter valid Price</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="Listing[country]" placeholder="India" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please Enter valid Country Name</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="Listing[location]" placeholder="Jaipur,Rajasthan" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please Enter valid Location</div>
                </div>

                <button class="btn btn-dark add-btn mt-3 mb-3">Create</button>
            </form>
        </div>
    </div>
</body>
