<% layout("/layouts/boilerplate") %>
<style>
    .responsive-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: auto;
    }
    .responsive-title {
        text-align: center;
        margin-top: 20px;
    }
    .responsive-card {
        width: 100%;
        max-width: 600px;
        margin: 20px;
        padding: 10px;
    }
    .responsive-img {
        width: 100%;
        height: auto;
    }
    .responsive-buttons {
        display: flex;
        justify-content: flex-start;
        margin-right: 28rem;
    }
    .responsive-btn {
        margin: 0 10px;
    }
    .responsive-reviews {
        width: 100%;
        max-width: 600px;
        margin: 20px;
    }
    .responsive-review-card {
        width: 100%;
        margin: 10px 0;
    }
    #map {
        height: 400px;
        width: 70%;
        border: 2px solid #ddd;
        border-radius: 10px;
        margin: 20px 0;
    }

    @media (max-width: 768px) {
        .responsive-card {
            padding: 10px;
        }
        .responsive-buttons {
            /* gap: 5px; */
            width: 100%;
            margin-right: 0px
        }
        #map {
            height: 20rem;
            width: 100%;
        }
    }

    @media (max-width: 576px) {
        .responsive-card,
        .responsive-reviews {
            padding: 10px;
        }
    }
</style>
<script>
    const mapToken = "<%= process.env.Map_Token %>";
    const listing = <%- JSON.stringify(Listing) %> ;
</script>
<body>
    <div class="responsive-container">
        <h3 class="responsive-title"><%= Listing.title %></h3>
        <div class="card responsive-card">
            <img src="<%= Listing.image.url %>" class="card-img-top responsive-img" alt="listing_img">
            <div class="card-body">
                <p class="card-text"><i>Owned By <%= Listing.owner.username %></i></p>
                <p class="card-text"><%= Listing.description %></p>
                <p class="card-text"> &#8377;<%= Listing.price.toLocaleString("en-IN") %> /night</p>
                <p class="card-text"><%= Listing.location %></p>
                <p class="card-text"><%= Listing.country %></p>
            </div>
        </div>
        <% if(currUser && currUser._id.equals(Listing.owner._id)){ %>
        <div class="responsive-buttons">
            <a href="/listings/<%= Listing._id %>/edit" class="btn btn-dark responsive-btn">Edit</a>
            <form method="post" action="/listings/<%= Listing._id %>?_method=DELETE">
                <button class="btn btn-dark responsive-btn">Delete</button>
            </form>
        </div>
        <% } %>
        <div class="responsive-reviews">
            <hr>
            <% if(currUser) { %>
            <h4>Leave a Review</h4>
            <form method="POST" action="/listings/<%= Listing._id %>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating">Rating</label class="form-label"><br>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment">Comment</label class="form-label"><br>
                    <textarea name="review[comments]" id="comments" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <% } %>
            <% if(Listing.reviews.length > 0) { %>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of Listing.reviews){ %>
                <div class="card responsive-review-card">
                    <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username %></h5>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        <p class="card-text"><%= review.comments %></p>
                        <form class="mb-3" method="post" action="/listings/<%= Listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-dark">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
            <% } %>
        </div>
        <h3 class="responsive-title">Where youâ€™ll be</h3>
        <div id="map"></div>
    </div>
    <script src="/js/map.js"></script>
</body>

